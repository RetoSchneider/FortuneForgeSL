<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Base colors -->
    <Color x:Key="PrimaryColor">#D52B1E</Color>
    <!-- Swiss Red -->
    <Color x:Key="SecondaryColor">#FFFFFF</Color>
    <!-- White -->
    <Color x:Key="BackgroundColor">LightGray</Color>
    <!-- Light Grey -->
    <Color x:Key="TextColor">#333333</Color>
    <!-- Almost Black -->

    <!-- Button colors -->
    <Color x:Key="ButtonBackgroundColor">#D52B1E</Color>
    <Color x:Key="ButtonTextColor">#FFFFFF</Color>

    <!-- Frame and Entry colors -->
    <Color x:Key="FrameBackgroundColor">#FFFFFF</Color>
    <Color x:Key="EntryBorderColor">#CCCCCC</Color>
    <Color x:Key="EntryTextColor">#333333</Color>

</ResourceDictionary>